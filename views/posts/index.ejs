<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
    <% include partials/top %>
<!-- main start(실제 view) -->
    <div class="index">
      <a href="/posts/new"><button>New</button></a>
      <% if(user) {%>
        <a href="/logout" class="float_fight"><button>Logout</button></a>
        <a href="/users/<%=user._id %>" class="float_fight"><button>My profile(<%= user.nickname %>)</button></a>
      <% } else { %>
        <a href="/login" class="float_right"><button>Login</button></a>
        <a href="/users/new" class="float_right"><button>Sign Up</button></a>
      <% } %>
      <ul>
        <li class="header"> Title
          <span class="float_right">Date</span>
          <span class="float_right">Author</span>
        </li>
        <% posts.forEach(function(post){ %>
          <li>
            <a href="/posts/<%= post._id %>"><%= post.title %></a>
            <span class="float_right"><%= post.createdAt.toLocaleDateString() %></span>
            <span class="float_right"><%= post.author.nickname %></span>
          </li>                <!-- toLocalDateString(): 세계표준시를 현재 사용자의 위치로 변환하여 표시-->
        <% }) %>
      </ul>
    </div>
<!-- main end -->
    </div><!-- posts end -->
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
